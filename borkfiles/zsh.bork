# Check if ZSH is currently in use
if [[ ${SHELL} == *bash ]]; then
    echo "missing: shell ZSH"
    chsh -s /bin/zsh
else
    echo "ok: shell ZSH"
fi

# Check for ~/.zsh folder
ok directory ${HOME}/.zsh
ok directory ${HOME}/.zsh/plugins

destination ${HOME}/.zsh/plugins
ok github zsh-users/zsh-syntax-highlighting
destination $HOME/.dotfiles