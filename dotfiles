#!/usr/bin/env bash

# Check if bork repo exists
if [ ! -d bork/.git ]; then
    git clone https://github.com/mattly/bork.git
fi

if [[ ( -z $1 ) || ( "$1" != "status" && "$1" != "satisfy" ) ]]; then
    echo "Wrong argument. Run ./dotfiles status or ./dotfiles satisfy"
elif [ -z $2 ]; then
    bork/bin/bork $1 borkfiles/bootstrap.bork
else
    bork/bin/bork $@
fi